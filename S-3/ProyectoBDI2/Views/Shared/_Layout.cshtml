<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hollister Management Page", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Consultas", "Index", "Consulta")</li>
                    <li>@Html.ActionLink("Ordenes de producción", "Index", "ORDENPRODUCCION")</li>
                    <li>
                        <a href="#" class="dropdown" data-toggle="dropdown"
                           aria-pressed="true">
                            Entidades
                            <span class="caret" />
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Clientes", "Index", "cliente")</li>
                            <li>@Html.ActionLink("Proveedores", "Index", "proveedor")</li>
                            <li>@Html.ActionLink("Estilos", "Index", "estilo")</li>
                            <li>@Html.ActionLink("Prendas", "Index", "prenda")</li>
                            <li>@Html.ActionLink("Pedidos", "Index", "pedido")</li>
                            <li>@Html.ActionLink("Materias Primas", "Index", "materiaprima")</li>
                            <li>@Html.ActionLink("Recetas", "Index", "materialprenda")</li>
                            <li>@Html.ActionLink("Ordenes de producción", "Index", "ordenproduccion")</li>
                            <li>@Html.ActionLink("Ordenes en espera", "Index", "ordenespera")</li>
                            <li>@Html.ActionLink("Unidades de medida", "Index", "unidadmedida")</li>
                            <li>@Html.ActionLink("Ordenes de compra", "Index", "ordencompra")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown" data-toggle="dropdown"
                           aria-pressed="true">
                            BD
                            <span class="caret" />
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Limpiar", "cleanDB", "home")</li>
                            <li>@Html.ActionLink("Rellenar", "refillDB", "home")</li>
                            <li>@Html.ActionLink("Registrar faltantes", "regF", "home")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - G.rar web dev unofficial sa.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
