@model ProyectoBDI2.Models.LINEAPEDIDO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Añadir productos</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Especifique la informacion de cada linea de pedido.</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.LabelFor(model => model.CODPEDIDO, "CODPEDIDO", htmlAttributes: new { @class = "control-label col-md-2" })
                </th>
                <th>
                    @Html.LabelFor(model => model.CODPRENDA, "CODPRENDA", htmlAttributes: new { @class = "control-label col-md-2" })
                </th>
                <th>
                    @Html.LabelFor(model => model.CANTIDAD, htmlAttributes: new { @class = "control-label col-md-2" })
                </th>
                <th>
                    @Html.LabelFor(model => model.PRECIO, htmlAttributes: new { @class = "control-label col-md-2" })
                </th>
                <th>
                    @Html.LabelFor(model => model.CODORDENPRODUCCION, "CODORDENPRODUCCION", htmlAttributes: new { @class = "control-label col-md-2" })
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProyectoBDI2.Models.LINEAPEDIDO lINEAPEDIDO in ViewBag.LINEASPEDIDO)
            {
                <tr>
                    <td>
                        @Html.Label(lINEAPEDIDO.CODPEDIDO.ToString(), htmlAttributes: new { @class = "control-label col-md-5", style = "font-weight:normal" })
                    </td>
                    <td>
                        @Html.Label(lINEAPEDIDO.CODPRENDA.ToString(), htmlAttributes: new { @class = "control-label col-md-5", style = "font-weight:normal" })
                    </td>
                    <td>
                        @Html.Label(lINEAPEDIDO.CANTIDAD.ToString(), htmlAttributes: new { @class = "control-label col-md-5", style = "font-weight:normal" })
                    </td>
                    <td>
                        @Html.Label(lINEAPEDIDO.PRECIO.ToString(), htmlAttributes: new { @class = "control-label col-md-5", style = "font-weight:normal" })
                    </td>
                    <td>
                        @Html.Label(lINEAPEDIDO.CODORDENPRODUCCION.ToString(), htmlAttributes: new { @class = "control-label col-md-5", style = "font-weight:normal" })
                    </td>
                </tr>
            }
            <tr>
                <td class="form-group">
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="CODPEDIDO" name="CODPEDIDO" type="text" value="@ViewBag.CODPEDIDO" readonly>
                    </div>
                </td>
                <td class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownList("CODPRENDA", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CODPRENDA, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CANTIDAD, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CANTIDAD, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PRECIO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PRECIO, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownList("CODORDENPRODUCCION", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CODORDENPRODUCCION, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <hr />
    <div class="form-group">
        <div class="row">
            <div class="col-md-4" style="margin-left:40px" > 
                @Html.ActionLink("Borrar pedido X", "Delete", "pedido", new { id=ViewBag.CODPEDIDO }, htmlAttributes : new { @class = "btn btn-primary", style="background-color:red;border:hidden"})
            </div>
            <div class="col-md-4 pull-right"> 
                <input type="submit" value="Añadir producto +" class="btn btn-default" /> 
                @Html.ActionLink("Confirmar pedido ✔", "ConfirmarPedido", null, htmlAttributes : new { @class = "btn btn-primary"})
            </div>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
